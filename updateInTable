#!/usr/bin/bash

# â”â”â”â”â”â”â”â”â”â”â”â”[ ğŸ¨ Color Definitions ]â”â”â”â”â”â”â”â”â”â”â”â”
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;36m'
NC='\033[0m' # No Color

dbName=$1

availableTables=$(ls "./mydb/$dbName")

while true
do
    clear
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”[ ğŸ“˜ Available Tables in $dbName ]â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${BLUE}ğŸ“˜ enter the number of the table or 0 to go back:${NC}"
    PS3="> "
    select table in $availableTables
    do
        if [[ "$REPLY" == "0" ]]; then
            echo -e "${YELLOW}âš ï¸  Returning to previous menu...${NC}"
            exit 0
        fi
        if [[ -z "$table" ]]; then
            echo -e "${YELLOW}âš ï¸  You must select a valid table!${NC}"
            read -n1 -rp "$(echo -e "${YELLOW}âš ï¸  Press any key to continue...${NC}")" -s
            echo
            continue
        fi
        echo -e "${BLUE}ğŸ“˜ Selected table: $table${NC}"
        echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”[ âœï¸  Update Record ]â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        read -rp "$(echo -e "${BLUE}ğŸ“˜ Enter column name to update: ${NC}")" columnName
        read -rp "$(echo -e "${BLUE}ğŸ“˜ Enter value to compare to (or leave empty to update all): ${NC}")" compareValue
        read -rp "$(echo -e "${BLUE}ğŸ“˜ Enter the operator (=, !=, <, >) (or leave empty to update all): ${NC}")" operator
        read -rp "$(echo -e "${BLUE}ğŸ“˜ Enter new value: ${NC}")" newValue
        if [[ -z "$columnName" || -z "$newValue" ]]; then
            echo -e "${RED}âŒ You must provide both the column name and the new value.${NC}"
            read -n1 -rp "$(echo -e "${YELLOW}âš ï¸  Press any key to continue...${NC}")" -s
            echo
            continue
        fi
        ./UpdateRecord "$dbName" "$table" "$columnName" "$compareValue" "$operator" "$newValue"
        read -n1 -rp "$(echo -e "${YELLOW}âš ï¸  Press any key to continue...${NC}")" -s
        echo
        break;
    done
done
